      <section id='deleteart'>
        <form action='deleteart' method='post' style="border-color:#66bfbf">
        <div class="container logindiv">
            <h2 class="logintitle">Delete Artwork</h2>
            <div class="inp">
              <label>Title : </label>
              <input type="text" placeholder="Enter Title for Art work to be deleted" name="title" required>          
          </div>
          <div class="inp">
            <label>Artist : </label>
            <input type="text" placeholder="Enter Artist for Art work to be deleted" name="aname" required>          
        </div>
          <div class="inp">
            <label>Gallery / Museum Name : </label>
            <input type="text" placeholder="Enter Display Location of Art Work to be deleted" name="museum" required>          
        </div>
        <div class="inp">
          <label>Date of Creation of Art Work: </label>
          <input type="date" placeholder="Enter Creation Date of Art Work to be deleted" name="datecreation" required>          
      </div>
           <div class="deletebutton">
            <button class="singlebutton btn btn-primary " type="submit">Submit</button>
           </div>
        </div>
    </form>
      </section>
